server {

    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;

    server_name {{ inventory_hostname }};

    # TODO: move this to be a separate vhost
    location /rabbit/ {
        proxy_pass                 http://127.0.0.1:15672/;
    }

    location /stash/ {
        root /srv/nginx/;
        autoindex on;
    }

}
